<Window x:Class="RemoteDesktopViewer.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RemoteDesktopViewer"
        mc:Ignorable="d"
        Title="ClientWindow" Height="450" Width="800"
        Closed="ClientWindow_OnClosed"
        Loaded="ClientWindow_OnLoaded"
        MouseMove="ClientWindow_OnMouseMove"
        MouseWheel="ClientWindow_OnMouseWheel"
        MouseDown="ClientWindow_OnMouseDown"
        MouseUp="ClientWindow_OnMouseUp"
        Deactivated="ClientWindow_OnDeactivated">
        <!-- PreviewKeyDown="ClientWindow_OnPreviewKeyDown" -->
        <!-- PreviewKeyUp="ClientWindow_OnPreviewKeyUp"> -->
    <Grid>
        <Image Name="Image" Stretch="Fill"></Image>
        <Button
            Name="NormalMaxBtn"
            Height="20"
            Width="80"
            VerticalAlignment="Top"
            Visibility="Hidden"
            Click="NormalMaxBtn_OnClick">Maximize</Button>
    </Grid>
</Window>
